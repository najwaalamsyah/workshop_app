<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/editpayment">

        <!-- ImageView for Workshop Image on the left -->
        <ImageView
            android:id="@+id/workshopImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="Workshop Image"
            android:scaleType="centerCrop" />

        <!-- LinearLayout for TextViews on the right side -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <!-- TextView for Workshop Title -->
            <TextView
                android:id="@+id/workshopTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <!-- TextView for Workshop Date -->
            <TextView
                android:id="@+id/workshopDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp" />

            <!-- TextView for Workshop Location with Icon -->
            <TextView
                android:id="@+id/workshopLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="5dp"
                android:text=""
                android:textColor="#11235D"
                android:layout_marginBottom="4dp" />

            <!-- TextView for Total Person with Icon -->
            <TextView
                android:id="@+id/maxParticipants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="5dp"
                android:text=""
                android:textColor="#888888"
                android:layout_marginBottom="4dp" />

            <!-- TextView for Price Workshop with Icon -->
            <TextView
                android:id="@+id/priceWorkshop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/is_price"
                android:drawablePadding="5dp"
                android:text=""
                android:textColor="#888888"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
